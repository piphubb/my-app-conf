apiVersion: apps/v1
kind: Deployment
metadata:
  name: reactjs-deployment
  labels:
    app: reactjs
spec:
  replicas: 3
  selector:
    matchLabels:
      app: reactjs
  template:
    metadata:
      labels:
        app: reactjs
    spec:
      containers:
      - name: reactjs
        image: piphubb/reacjs-argo:00
        ports:
        - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: reactjs-service
spec:
  type: NodePort
  selector:
    app: reactjs
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
      nodePort: 30123
